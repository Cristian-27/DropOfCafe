---
    const { lang, t } = Astro.props;
---

<section class="bg-cover bg-center h-screen w-full flex items-center justify-center">
    <div class="text-center text-white p-8 w-10/12 h-10/12 my-10 bg-black rounded-lg">
        <h1 class="text-4xl font-bold mb-4">{t('characterTitle')}</h1>
        <p class="text-lg mb-6">Explore the diverse characters of our story.</p>
        <a href="/characters" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            View Characters
        </a>
    </div>

</section>